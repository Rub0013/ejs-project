<!DOCTYPE html>
<html>
  <head>
    <%- include templates/head-general.ejs %>
    <title><%= title %></title>
  </head>
  <body>
    <%- include templates/nav.ejs %>
    <h1><%= title %></h1>
    <% if(success){ %>
    <div class="alert alert-success">
      <strong>Success!</strong> Registration succeeded.
    </div>
    <% }
    else if(errors){ %>
      <% errors.forEach(function(value) { %>
        <div class="alert alert-danger">
          <strong>Error!</strong> <%= value.msg %>.
        </div>
      <% }); %>
    <% } %>
    <div class="col-md-2">
      <form method="post" action="/submit">
        <div class="form-group">
          <label for="userName">Name</label>
          <input type="text" class="form-control" id="userName" name="name" placeholder="Your name...">
        </div>
        <div class="form-group">
          <label for="userEmail">Email</label>
          <input type="text" class="form-control" id="userEmail" name="email" placeholder="Your email...">
        </div>
        <div class="form-group">
          <label for="userPhone">Phone number</label>
          <input type="text" class="form-control" id="userPhone" name="number" placeholder="Your phone number...">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </body>
</html>
